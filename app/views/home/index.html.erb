    setTimeout(() => {
      window.location.reload();
    }, 1000);
  })
  .catch(error => {
    console.error('Error:', error);
    // Restore button state
    button.textContent = originalText;
    button.disabled = false;
    alert('æ›´æ–°ä»»å‹™ç‹€æ…‹å¤±æ•—ï¼Œè«‹é‡è©¦');
  });
}

