// Valence-Arousal æ¨¡å‹é¡è‰²è¨ˆç®—
function calculateValenceArousalColor(mood) {
  // å°‡ 1-5 åˆ†æ•¸ï¼ˆæ”¯æŒå°æ•¸ï¼‰æ˜ å°„åˆ° Valence-Arousal ç©ºé–“
  const moodScore = parseFloat(mood);
  
  // ç·šæ€§æ’å€¼è¨ˆç®— Valence å’Œ Arousal
  // Valence: 1åˆ†(-0.8) â†’ 5åˆ†(0.9)
  const valence = -0.8 + (moodScore - 1) * (0.9 - (-0.8)) / (5 - 1);
  
  // Arousal: 1åˆ†(0.3) â†’ 5åˆ†(0.8)ï¼Œä½†ä¸­é–“æœ‰è®ŠåŒ–
  let arousal;
  if (moodScore <= 2) {
    // 1-2åˆ†ï¼šarousal ä¸Šå‡ (0.3 â†’ 0.6)
    arousal = 0.3 + (moodScore - 1) * 0.3;
  } else if (moodScore <= 3) {
    // 2-3åˆ†ï¼šarousal ä¸‹é™ (0.6 â†’ 0.4)
    arousal = 0.6 - (moodScore - 2) * 0.2;
  } else {
    // 3-5åˆ†ï¼šarousal ä¸Šå‡ (0.4 â†’ 0.8)
    arousal = 0.4 + (moodScore - 3) * 0.2;
  }
  
  // æ ¹æ“š Valence-Arousal è¨ˆç®— HSL é¡è‰²
  const color = valenceArousalToColor(valence, arousal);
  
  return { valence, arousal, color };
}

// å°‡ Valence-Arousal è½‰æ›ç‚ºé¡è‰²
function valenceArousalToColor(valence, arousal) {
  // è‰²ç›¸ï¼šåŸºæ–¼ valenceï¼ˆ-1 åˆ° +1ï¼‰
  // è² é¢æƒ…ç·’ â†’ è—è‰²ç³» (240Â°)
  // æ­£é¢æƒ…ç·’ â†’ é»ƒç¶ è‰²ç³» (60Â°-120Â°)
  let hue;
  if (valence < 0) {
    // è² é¢ï¼šè—è‰²åˆ°ç´«è‰² (240Â° - 300Â°)
    hue = 240 + (valence * -60); // -1 â†’ 300Â°, 0 â†’ 240Â°
  } else {
    // æ­£é¢ï¼šé»ƒè‰²åˆ°ç¶ è‰² (60Â° - 120Â°)
    hue = 60 + (valence * 60); // 0 â†’ 60Â°, 1 â†’ 120Â°
  }
  
  // é£½å’Œåº¦ï¼šåŸºæ–¼ arousalï¼ˆ0 åˆ° 1ï¼‰
  const saturation = 30 + (arousal * 50); // 30% åˆ° 80%
  
  // äº®åº¦ï¼šåŸºæ–¼ arousalï¼ˆ0 åˆ° 1ï¼‰
  const lightness = 45 + (arousal * 25); // 45% åˆ° 70%
  
  return `hsl(${Math.round(hue)}, ${Math.round(saturation)}%, ${Math.round(lightness)}%)`;
}

